<%= form_with(model: @chatbot, url: wizard_path, method: :patch, local: true, class: "max-w-xl mx-auto space-y-6") do |form| %>
  <div>
    <h1 class="text-2xl font-semibold text-gray-900"><%= t("after_signup.create_chatbot.title") %></h1>
    <p class="mt-2 text-base text-gray-600"><%= t("after_signup.create_chatbot.description") %></p>
  </div>

  <div>
    <%= form.label :name, t("after_signup.create_chatbot.name_label"), class: "block text-sm font-medium text-gray-900" %>
    <%= form.text_field :name, class: "mt-2 block w-full rounded-md border border-gray-300 px-3 py-2 text-base text-gray-900 focus:border-black focus:outline-none" %>
    <% if @chatbot.errors[:name].present? %>
      <p class="mt-2 text-sm text-red-600"><%= @chatbot.errors[:name].first %></p>
    <% end %>
  </div>

  <div class="flex justify-end">
    <%= form.submit t("after_signup.create_chatbot.submit"), class: "cursor-pointer rounded-md bg-black px-4 py-2 font-semibold text-base text-white hover:bg-stone-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black" %>
  </div>
<% end %>
