<%= form_with(model: chat, class: "contents") do |form| %>
  <% if chat.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(chat.errors.count, "error") %> prohibited this chat from being saved:</h2>

      <ul class="list-disc ml-6">
        <% chat.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :chatbot_id %>
    <%= form.text_field :chatbot_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chat.errors[:chatbot_id].none?, "border-red-400 focus:outline-red-600": chat.errors[:chatbot_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :contact_phone %>
    <%= form.text_field :contact_phone, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chat.errors[:contact_phone].none?, "border-red-400 focus:outline-red-600": chat.errors[:contact_phone].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :thread_id %>
    <%= form.text_field :thread_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chat.errors[:thread_id].none?, "border-red-400 focus:outline-red-600": chat.errors[:thread_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :source %>
    <%= form.text_field :source, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chat.errors[:source].none?, "border-red-400 focus:outline-red-600": chat.errors[:source].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
