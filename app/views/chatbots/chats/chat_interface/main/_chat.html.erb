<%= turbo_stream_from "chat_#{@chat.id}_messages" %>
<div class="flex flex-col h-[600px] max-h-[600px]">
  <div class="overflow-y-scroll max-h-[600px] h-[600px] flex flex-col" data-controller="chat-scroll">
    <div class="flex flex-col p-4 gap-2" id="chat_messages_<%= @chat.id %>">
      <% @chat.messages.order(created_at: :asc).each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
  </div>
  <%= render "chatbots/chats/chat_interface/main/form", chat: @chat %>
</div>