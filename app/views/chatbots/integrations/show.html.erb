<!-- Main container with full width -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Integrations</h1>

  <!-- Grid layout for integration cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- WhatsApp Card -->
    <div class="cursor-not-allowed bg-white rounded-lg shadow-md p-6 border border-gray-200">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-lg">
          <%= image_tag "https://conversalo.nyc3.cdn.digitaloceanspaces.com/wa.svg", class: "w-full h-full object-cover" %>
        </div>
        <h2 class="text-xl text-stone-400 font-semibold ml-4">WhatsApp</h2>
      </div>
      <p class="text-stone-400 mb-6">Connect your agent to a WhatsApp number and let it respond to messages from your customers.</p>
      <div class="flex gap-2">
        <button class="w-full bg-stone-100 text-stone-500 py-2 px-4 rounded-lg">
          Coming Soon
        </button>
      </div>
    </div>

    <!-- Instagram Card -->
    <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 cursor-not-allowed">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-lg">
          <%= image_tag "https://conversalo.nyc3.cdn.digitaloceanspaces.com/ig.svg", class: "w-full h-full object-cover" %>
        </div>
        <h2 class="text-xl text-stone-400 font-semibold ml-4">Instagram</h2>
      </div>
      <p class="text-stone-400 mb-6">Connect your agent to an Instagram account and let it respond to messages from your customers.</p>
      <button class="w-full bg-stone-100 text-stone-500 py-2 px-4 rounded-lg">
        Coming Soon
      </button>
    </div>

    <!-- Messenger Card -->
    <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 cursor-not-allowed">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 rounded-lg">
          <%= image_tag "https://conversalo.nyc3.cdn.digitaloceanspaces.com/messenger.svg", class: "w-full h-full object-cover" %>
        </div>
        <h2 class="text-xl text-stone-400 font-semibold ml-4">Messenger</h2>
      </div>
      <p class="text-stone-400 mb-6">Connect your agent to a Messenger account and let it respond to messages from your customers.</p>
      <button class="w-full bg-stone-100 text-stone-500 py-2 px-4 rounded-lg">
        Coming Soon
      </button>
    </div>

  </div>
</div>
