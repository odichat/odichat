<%= form_with(url: chatbot_integrations_whatsapp_path(chatbot), 
              method: :patch, 
              class: "space-y-6") do |form| %>
  <div class="form-control w-full">
    <div class="flex items-center gap-8">
      <% if business_profile.profile_picture_url.present? %>
        <div class="avatar avatar-online">
          <div class="w-24 rounded-full cursor-pointer hover:scale-110 transition-all duration-300">
            <%= image_tag(business_profile.profile_picture_url, class: "") %>
          </div>
        </div>
      <% end %>
      <div class="flex flex-col gap-2 w-full">
        <label class="label">
          <span class="label-text"><%= t('chatbots.integrations.whatsapp.form.profile_picture_label') %></span>
        </label>
        <%= form.file_field :profile_picture_handle, 
          class: "file-input file-input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50",
          accept: "image/*" %>
      </div>
    </div>
  </div>
  <!-- About field -->
  <div class="form-control w-full">
    <label class="label">
      <span class="label-text"><%= t('chatbots.integrations.whatsapp.form.about_label') %></span>
    </label>
    <%= form.text_field :about, 
        value: business_profile.about,
        minlength: 1,
        maxlength: 139,
        class: "input input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50" %>
  </div>

  <!-- Address field -->
  <div class="form-control w-full">
    <label class="label">
      <span class="label-text"><%= t('chatbots.integrations.whatsapp.form.address_label') %></span>
    </label>
    <%= form.text_field :address, 
        value: business_profile.address,
        minlength: 0,
        maxlength: 256,
        class: "input input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50" %>
  </div>

  <!-- Description field -->
  <div class="form-control w-full">
    <label class="label">
      <span class="label-text"><%= t('chatbots.integrations.whatsapp.form.description_label') %></span>
    </label>
    <%= form.text_area :description, 
        value: business_profile.description,
        minlength: 0,
        maxlength: 512,
        rows: 4,
        class: "textarea textarea-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50" %>
  </div>

  <!-- Email field -->
  <div class="form-control w-full">
    <label class="label">
      <span class="label-text"><%= t('chatbots.integrations.whatsapp.form.email_label') %></span>
    </label>
    <%= form.email_field :email, 
        value: business_profile.email,
        minlength: 0,
        maxlength: 128,
        class: "input input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50" %>
  </div>

  <!-- Websites field -->
  <div class="form-control w-full">
    <label class="label">
      <span class="label-text"><%= t('chatbots.integrations.whatsapp.form.websites_label') %></span>
      <span class="tooltip tooltip-bottom" data-tip="<%= t('chatbots.integrations.whatsapp.form.websites_tooltip') %>">
        <%= icon "information-circle", variant: "mini" %>
      </span>
    </label>
    <%= form.text_field :websites, 
        value: business_profile.websites&.join(", "),
        placeholder: t('chatbots.integrations.whatsapp.form.websites_placeholder'),
        class: "input input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50" %>
  </div>

  <!-- Vertical field -->
  <div class="form-control w-full">
    <label class="label">
      <span class="label-text"><%= t('chatbots.integrations.whatsapp.form.vertical_label') %></span>
    </label>
    <%= form.select :vertical,
        Channel::Whatsapp.available_verticals.map { |key, label| [label, key] },
        { selected: business_profile.vertical, include_blank: t('chatbots.integrations.whatsapp.form.vertical_select_placeholder') },
        class: "select select-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50" %>
  </div>
  
  <!-- Save button -->
  <div class="card-actions justify-end">
    <%= form.submit t('chatbots.integrations.whatsapp.form.save_button'), class: "btn btn-primary focus:outline-none focus-visible:ring focus-visible:ring-primary/50", data: { turbo_submits_with: t('chatbots.integrations.whatsapp.form.save_button_submitting')} %>
  </div>
<% end %> 