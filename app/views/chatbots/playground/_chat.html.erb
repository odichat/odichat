<%= turbo_frame_tag "playground_chat", class: "w-full h-full" do %>
  <div class="flex-1">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <!-- Header section -->
      <%= render "chatbots/playground/chat_header", chatbot: chatbot %>
      
      <!-- Chat messages area -->
      <%= render "chatbots/playground/chat_messages", chat: chat, messages: messages %>

      <!-- Input area -->
      <%= render "chatbots/playground/chat_form", chat: chat, messages: messages %>
    </div>
  </div>
<% end %>