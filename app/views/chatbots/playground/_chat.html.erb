<div class="w-full h-full">
  <div class="flex-1">
    <div class="card bg-base-100 shadow-xl">
      <!-- Header section -->
      <%= render "chatbots/playground/chat_header", chatbot: chatbot %>
      
      <!-- Chat messages area -->
      <div class="min-h-[400px] max-h-[400px] overflow-y-auto p-6" data-controller="chat-scroll">
        <%= render "chatbots/playground/chat_messages", messages: messages %>
      </div>

      <!-- Input area -->
      <div class="card-body pt-0 px-4">
        <div class="flex items-center">
          <%= render "chatbots/playground/chat_form", chat: chat, messages: messages %>
        </div>
      </div>
    </div>
  </div>
</div>
