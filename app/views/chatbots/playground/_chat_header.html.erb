<div class="border-b border-gray-200 p-4 flex items-center justify-between">
  <div class="flex items-center space-x-3">
    <div class="w-10 h-10 rounded-full bg-gradient-to-r from-orange-500 to-amber-800 flex items-center justify-center">
      <span class="text-white font-bold text-xl"><%= chatbot&.name&.first || 'A' %></span>
    </div>
    <h3 class="font-medium text-lg text-gray-900"><%= chatbot&.name || "Assistant" %></h3>
  </div>
  <!-- Refresh chat button -->
  <%= button_to chats_path, 
      method: :post,
      class: "cursor-pointer p-1 rounded-full text-gray-500 hover:bg-gray-100",
      params: { chat: { chatbot_id: chatbot.id, source: "playground" } } do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
    </svg>
  <% end %>
</div>
