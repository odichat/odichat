<!-- Main playground container -->
<div class="min-h-screen bg-gray-50">
  <!-- Header section with title -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="py-6">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Playground</h1>
      <p class="mt-2 text-sm text-gray-600">Test and experiment with your chatbot in real-time.</p>
    </div>
  </div>

  <!-- Chat interface placeholder -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <!-- Chat messages area -->
      <div class="h-96 overflow-y-auto mb-4 p-4 bg-gray-50 rounded-lg">
        <div class="text-center text-gray-500 mt-32">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-4l-4 4z"/>
          </svg>
          <p class="mt-2">Start a conversation with your chatbot</p>
        </div>
      </div>

      <!-- Input area -->
      <div class="flex items-center space-x-3">
        <input type="text" placeholder="Type your message..." class="flex-1 rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          Send
        </button>
      </div>
    </div>
  </div>
</div>
