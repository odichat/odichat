<!-- Main container with full width -->
<div class="container mx-auto px-4 py-8">
  <!-- Settings heading -->
  <h1 class="text-3xl font-bold mb-8">Settings</h1>
  
  <!-- Flex container for sidebar and main content -->
  <div class="flex gap-6">
    <!-- Left sidebar -->
    <div class="w-64 shrink-0">
      <nav class="space-y-1">
        <a href="#" class="block px-4 py-2 rounded-md bg-gray-100 text-gray-900 font-medium">General</a>
      </nav>
    </div>
    
    <!-- Main content area -->
    <div class="flex-1">
      <div class="bg-white rounded-lg border shadow-sm border-gray-200 p-6">
        <h2 class="text-2xl font-bold mb-6">General</h2>
        
        <!-- Form with Turbo attributes -->
        <%= form_with(model: @chatbot, 
                      url: chatbots_setting_path(@chatbot), 
                      method: :patch, 
                      class: "space-y-6",
                      data: { turbo: true }) do |form| %>
          <!-- Name field -->
          <div>
            <label for="chatbot_name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", value: @chatbot.name %>
          </div>
          
          <!-- Save button -->
          <div class="flex justify-end">
            <%= form.submit "Save", class: "px-4 py-2 bg-black text-white rounded-md hover:bg-stone-900 cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <div class="relative my-10">
        <div class="absolute inset-0 flex items-center">
          <span class="w-full border-gray-200 border-t"></span>
        </div>
        <div class="relative flex justify-center text-xs uppercase">
          <span class="bg-white px-2 font-bold text-red-400">
            Danger Zone
          </span>
        </div>
      </div>

      <div class="p-6 rounded-lg border bg-white shadow-sm border-red-200">
        <h2 class="text-2xl text-red-500 font-bold mb-6">Delete Agent</h2>
        <div class="pt-0">
          <p>
            This action is irreversible. All data associated with this agent will be permanently deleted.
          </p>
          <div class="mt-4">
            <%= button_to "Delete", chatbots_setting_path(@chatbot), method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 cursor-pointer", data: { turbo_confirm: "Are you sure you want to delete this agent?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
