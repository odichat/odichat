<h1 class="text-3xl font-bold mb-8">Sources</h1>

<div class="flex gap-6">
  <!-- Left sidebar -->
  <div class="w-64 shrink-0">
    <nav class="menu w-full bg-base-200 rounded-box">
      <li><a class="active focus:outline-none focus-visible:ring focus-visible:ring-primary/50">Files</a></li>
    </nav>
  </div>

  <!-- Main content area -->
  <div class="flex-1">
    <div class="card bg-base-100 shadow-md">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">Files</h2>

        <%= form_with model: @chatbot, url: chatbots_source_path(@chatbot), method: :put, data: { 
          controller: "files",
          files_documents_value: @documents,
          files_chatbot_id_value: @chatbot.id
        } do |f| %>
          <!-- Add hidden fields for existing documents -->
          <% @documents.each do |doc| %>
            <%= f.hidden_field :documents, multiple: true, value: doc[:signed_id] %>
          <% end %>
          
          <div class="form-control w-full">
            <%= f.file_field :documents, 
                class: "file-input file-input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50",
                multiple: true,
                data: { 
                  files_target: "input",
                  action: "change->files#showSelectedFile"
                } %>
          </div>

          <!-- File cards container -->
          <%= render partial: "file_card" %>
          <div class="mt-4" data-files-target="container">
            <!-- File cards will be dynamically inserted here -->
          </div>

          <div class="card-actions justify-end mt-6">
            <%= f.submit "Train Agent", class: "btn btn-primary focus:outline-none focus-visible:ring focus-visible:ring-primary/50" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>