<div class='flex min-h-screen'>
  <!-- Left side with form -->
  <div class='w-full md:w-2/3 p-6 md:p-8 flex flex-col justify-center'>
    <div class='w-full max-w-sm mx-auto'>
      <!-- Logo -->
      <div class='mb-6'>
        <%= image_tag "https://odisea.nyc3.cdn.digitaloceanspaces.com/odichat/assets/logo.svg", class: 'w-32', alt: 'Logo' %>
      </div>

      <h1 class='text-2xl md:text-3xl font-bold mb-2'>Choose a new password</h1>
      <p class='text-base-content/60 mb-6'>Enter your new password below to complete your password reset.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'space-y-4', method: :put }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class='form-control w-full'>
          <label class='label'>
            <span class='label-text'>New password</span>
            <% if @minimum_password_length %>
              <span class='label-text-alt'>(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          </label>
          <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'input input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50' %>
        </div>

        <div class='form-control w-full'>
          <label class='label'>
            <span class='label-text'>Confirm new password</span>
          </label>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'input input-bordered w-full focus:outline-none focus-visible:ring focus-visible:ring-primary/50' %>
        </div>

        <div>
          <%= f.submit 'Change my password', class: 'btn btn-primary w-full' %>
        </div>
      <% end %>

      <!-- styled shared links -->
      <div class='mt-4 text-center text-sm'>
        <%- if controller_name != 'sessions' %>
          <div class='text-base-content/60'>
            Remembered your password? <%= link_to 'Log in', new_session_path(resource_name), class: 'link link-hover font-medium' %>
          </div>
        <% end %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <div class='mt-2'>
            No account? <%= link_to 'Sign up', new_registration_path(resource_name), class: 'link link-hover' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right side with image -->
  <div class='hidden md:block md:w-1/3 bg-base-200'>
    <div class='h-full relative'>
      <div class='absolute inset-0 bg-gradient-to-r from-white via-white/20 to-transparent z-10'></div>
      <img src='https://odisea.nyc3.cdn.digitaloceanspaces.com/assets/japanese_gradient_grainy_blobs.png' alt='Workspace' class='w-full h-full object-cover'>
    </div>
  </div>
</div>
