<div class="flex min-h-screen">
  <!-- Left side with form -->
  <div class="w-full md:w-1/2 p-6 md:p-8 flex flex-col justify-center">
    <div class="w-full max-w-sm mx-auto">
      <!-- Logo -->
      <div class="mb-6">
        <%= image_tag "logo.svg", class: "h-12 w-auto", alt: "Logo" %>
      </div>

      <h1 class="text-2xl md:text-3xl font-bold tracking-tight text-gray-900 mb-2">Sign in to your account</h1>
      <p class="text-gray-600 mb-6">Welcome back! Please enter your details.</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
        </div>

        <div class="flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-black border-gray-300 rounded focus:ring-black" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
            </div>
          <% end %>
          <div class="text-sm">
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-black hover:text-gray-800 font-medium" %>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-black hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black" %>
        </div>
      <% end %>

      <!-- Add styled shared links -->
      <div class="mt-4 text-center text-sm">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <div class="text-gray-600">
            Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-black hover:text-gray-800 font-medium" %>
          </div>
        <% end %>
        
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <div class="mt-2">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-black hover:text-gray-800" %>
          </div>
        <% end %>
        
        <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <div class="mt-2">
            <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-black hover:text-gray-800" %>
          </div>
        <% end %>
      </div>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Or continue with</span>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-2 gap-3">
          <div>
            <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
              Google
            </a>
          </div>

          <div>
            <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
              GitHub
            </a>
          </div>
        </div>
        
        <!-- Add OAuth providers if available -->
        <%- if devise_mapping.omniauthable? %>
          <div class="mt-4 space-y-3">
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right side with image -->
  <div class="hidden md:block md:w-1/2 bg-gray-50">
    <div class="h-full flex items-center justify-center p-8">
      <div class="w-full max-w-md">
        <img src="https://images.unsplash.com/photo-1554629947-334ff61d85dc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1036&q=80" alt="Workspace" class="w-full rounded-lg shadow-lg">
      </div>
    </div>
  </div>
</div>
