<%
  status_code = local_assigns.fetch(:status, 500)
  error_message = local_assigns.fetch(:message, "An error occurred")
  status_text = Rack::Utils::HTTP_STATUS_CODES[status_code]
%>

<div class="min-h-screen bg-base-200 flex items-center justify-center p-4">
  <div class="card w-full max-w-xl bg-base-100 shadow-xl">
    <div class="card-body items-center text-center">
      <div class="text-error text-6xl font-bold mb-4"><%= status_code %></div>
      <h2 class="card-title text-2xl mb-4"><%= status_text %></h2>
      <p class="text-base-content mb-8"><%= error_message %></p>
      <div class="card-actions">
        <%= link_to "Back to Home", root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div> 