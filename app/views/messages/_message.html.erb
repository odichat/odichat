<% if message.sender == "user" %>
  <%= turbo_frame_tag dom_id(message) do %>
    <div class="flex justify-end">
      <div class="inline-block">
        <div class="bg-black rounded-[20px] rounded-tr-[4px] px-4 py-3">
          <p class="text-white text-base"><%= message.content %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<% if message.sender == "assistant" %>
  <%= turbo_frame_tag dom_id(message) do %>
    <div class="flex justify-start">
      <div class="inline-block">
        <div class="bg-gray-200 rounded-[20px] rounded-tl-[4px] px-4 py-3">
          <p class="text-gray-900 text-base"><%= message.content %></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

