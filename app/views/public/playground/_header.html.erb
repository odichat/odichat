<div class="navbar bg-base-100 border-b border-base-200 px-4">
  <div class="flex-1">
    <div class="flex items-center gap-3">
      <div class="avatar placeholder">
        <div class="bg-gradient-to-r from-warning to-error w-10 h-10 rounded-full relative">
          <span class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-xl font-bold text-base-100"><%= chatbot&.name&.first || 'A' %></span>
        </div>
      </div>
      <h3 class="text-lg font-medium"><%= chatbot&.name || t('public_playground.header.default_assistant_name') %></h3>
    </div>
  </div>
  <div class="flex-none">
    <%= button_to public_chats_path, 
        method: :post,
        class: "btn btn-ghost btn-circle",
        title: t('public_playground.header.new_chat_button_title'),
        aria: { label: t('public_playground.header.new_chat_button_title') },
        params: { chat: { chatbot_id: chatbot.id, source: "public_playground", inbox_id: chatbot.public_playground_inbox&.id } } do %>
      <%= icon "arrow-path", variant: "mini" %>
    <% end %>
  </div>
</div>
