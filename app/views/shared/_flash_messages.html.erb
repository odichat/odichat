<%# Flash messages partial %>
<% if flash.any? %>
  <div id="flash" class="fixed top-0 left-0 right-0 z-50 px-4 py-3 mt-4 mx-auto max-w-3xl">
    <% flash.each do |type, message| %>
      <% 
        # Determine the appropriate CSS classes based on the flash type
        alert_class = case type.to_s
                      when "notice"
                        "bg-green-50 text-green-800 border-green-200"
                      when "alert"
                        "bg-red-50 text-red-800 border-red-200"
                      else
                        "bg-blue-50 text-blue-800 border-blue-200"
                      end
      %>
      <div class="rounded-md border p-4 shadow-md <%= alert_class %> flex items-start mb-2">
        <div class="flex-shrink-0">
          <% if type.to_s == "notice" %>
            <!-- Heroicon name: solid/check-circle -->
            <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          <% elsif type.to_s == "alert" %>
            <!-- Heroicon name: solid/x-circle -->
            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <!-- Heroicon name: solid/information-circle -->
            <svg class="h-5 w-5 text-blue-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm font-medium"><%= message %></p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" class="inline-flex rounded-md p-1.5 text-gray-500 hover:bg-gray-100 focus:outline-none" onclick="this.parentElement.parentElement.parentElement.remove()">
              <span class="sr-only">Dismiss</span>
              <!-- Heroicon name: solid/x -->
              <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div id="flash"></div>
<% end %> 