<div class="navbar bg-base-100 shadow-sm">
  <div class="flex-1">
    <%= link_to root_path, class: "btn btn-ghost text-xl" do %>
      <%= image_tag "https://odisea.nyc3.cdn.digitaloceanspaces.com/odichat/assets/logo.svg", alt: "Logo", class: "h-8 w-auto" %>
    <% end %>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <li><%= link_to "Dashboard", chatbots_path %></li>
      <li>
        <%= link_to "https://devastador.notion.site/Gu-as-y-documentaci-n-de-Odichat-20af9527e118802aa0f3f8292ee1e223", title: "Guías y documentación de Odichat", target: "_blank" do %>
          Guías
          <div class="badge badge-xs badge-info">Nuevo</div>
        <% end %>
      </li>
      <li>
        <%= link_to new_support_ticket_path, title: "Contacta el equipo de Odichat" do %>
          Ayuda & Soporte
          <div class="badge badge-xs badge-info">Nuevo</div>
        <% end %>
      </li>
    </ul>
  </div>
  <% if user_signed_in? %>
    <div class="flex-none">
      <ul class="menu menu-horizontal px-1">
        <li class="relative">
          <details>
            <summary>
              <div class="w-6 h-6 bg-radial-[at_25%_25%] from-white via-[#FFC738] to-[#E66429] to-75% rounded-full"></div>
            </summary>
            <ul class="bg-base-100 rounded-t-none p-2 w-[200px] absolute top-full right-0 mt-2 shadow-lg z-10">
              <li><%= link_to current_user.email, "#", class: "hover:bg-base-200" %></li>
              <li><%= link_to t('shared.navbar.chatbots_panel'), chatbots_path, class: "hover:bg-base-200" %></li>
              <li><%= link_to t('shared.navbar.settings'), edit_user_registration_path, class: "hover:bg-base-200" %></li>
              <% if (Flipper.enabled?(:paywall) && current_user.subscribed?) || (Flipper.enabled?(:paywall) && current_user.past_due?) %>
                <li><%= link_to t('shared.navbar.billing'), subscriptions_billing_path, class: "hover:bg-base-200" %></li>
              <% end %>
              <li><%= link_to t('shared.navbar.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: "hover:bg-base-200" %></li>
            </ul>
          </details>
        </li>
      </ul>
    </div>
  <% end %>
</div>
